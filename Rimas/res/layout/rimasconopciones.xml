<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!-- **********************************************************************************************************************************************
   		 Pantalla que aparece a continuación de la pantalla Rimas.java(rimas.xml), y que muestra la palabra que deseamos buscar, y la opción de búsqueda
   		 que deseamos (rimar con las 3, 2, 1 última/s letra/s) para esa búsqueda.
   		 **********************************************************************************************************************************************
    -->
    
     <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Introduce la palabra"
        />
     
    <LinearLayout
        android:layout_width="match_parent"
   		android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    
	    <EditText 
	        android:id="@+id/etPalabraBuscar2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:hint="palabra"
	        />
	    
	    <Button 
	        android:id="@+id/btSearch2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Search"
	      />
	    
    </LinearLayout>
    
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Rimas:"
        />
    
    <LinearLayout 
        android:layout_width="fill_parent"
   		android:layout_height="fill_parent"
        android:orientation="vertical"
        >
		    
		    <Spinner 
		        android:id="@+id/spOpcionesRimas"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:drawSelectorOnTop="true"
		        android:prompt="@string/titulo_desplegable_spinner"
		        />
    </LinearLayout>
    

</LinearLayout>
