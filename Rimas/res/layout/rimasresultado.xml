<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!-- **********************************************************************************************************************************************
   		 Pantalla que aparece a continuación de la pantalla RimasConOpciones.java(rimasconopciones.xml), y que muestra la palabra que deseamos buscar, 
   		 y el resultado de esa búsqueda, dando opción a picar sobre cada resultado obtenido, para obtener su significado según la RAE.
   		 **********************************************************************************************************************************************
    -->
    
     <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Introduce la palabra"
        />
     
    <LinearLayout
        android:layout_width="match_parent"
   		android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    
	    <EditText 
	        android:id="@+id/etPalabraBuscar3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:hint="palabra"
	        />
	    
	    <Button 
	        android:id="@+id/btSearch3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Search"
	      />
	    
    </LinearLayout>
    
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Rimas:"
        />
    
    
    

</LinearLayout>

